generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String
  name     String?
  image    String?
  hash     String?
  provider Providers

  Invoice Invoice[]

  @@map("users")
}

enum Providers {
  CREDENTIAL
  GOOGLE
}

model Invoice {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId        Int
  extractedText String

  User User @relation(fields: [userId], references: [id])

  @@map("invoices")
}
